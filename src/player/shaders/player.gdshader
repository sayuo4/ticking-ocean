shader_type canvas_item;

uniform sampler2D screen_texture : hint_screen_texture;
uniform float frequency = 0.005;

void fragment() {
    // Calculate UV coordinates
	vec2 uv = SCREEN_UV;
    // Offset the UV coordinates based on a sine wave
    uv.x += sin(SCREEN_UV.y * 10.0 + TIME) * frequency;
    uv.y += sin(SCREEN_UV.x * 10.0 + TIME) * frequency;

    // Sample the texture using the modified UV coordinates
    COLOR = texture(screen_texture, uv);
}